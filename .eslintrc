{
	"parser": "babel-eslint",
	"plugins": ["react"],
	"env": {
		"browser": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"max-len": [
			1,
			200,
			2,
			{
				"ignoreComments": true
			}
		],
		"no-console": 0,
		"no-plusplus": 0,
		"no-path-concat": 0,
		"no-consistent-return": 0,
		"no-prefer-template": 0,
		"no-tabs": 0,
		"indent": [2, "tab"],
		"no-unused-vars": [1, { "vars": "local", "args": "none" }],
		"comma-dangle": 0,
		"global-require": 0,
		"class-methods-use-this": 0,
		"arrow-body-style": 0
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base"]
}
